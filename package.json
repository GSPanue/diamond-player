{
  "name": "diamond-player",
  "description": "A customisable HTML5 video player component for React",
  "version": "0.0.0",
  "author": "Gurdev S. Panue",
  "license": "MIT",
  "homepage": "https://github.com/GSPanue/diamond-player#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GSPanue/diamond-player.git"
  },
  "bugs": {
    "url": "https://github.com/GSPanue/diamond-player/issues"
  },
  "keywords": [
    "diamond",
    "player",
    "diamond-player",
    "video",
    "hls",
    "live",
    "streaming",
    "html5",
    "react"
  ],
  "main": "lib/index.js",
  "scripts": {
    "start": "webpack-dev-server --config ./config/webpack.demo.config.babel.js",
    "build": "run-p build:*",
    "build:lib": "webpack -p --config ./config/webpack.lib.config.babel.js",
    "build:demo": "webpack -p --config ./config/webpack.demo.config.babel.js",
    "analyze:lib": "webpack-bundle-analyzer --port 4200 ./lib/stats.json",
    "analyze:demo": "webpack-bundle-analyzer --port 4200 ./demo/js/stats.json",
    "test": "jest --silent",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:report": "npm run test:coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/config/tests"
    ],
    "setupTestFrameworkScriptFile": "jest-extended",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "big-buck-bunny-1080p": "0.0.6",
    "coveralls": "^3.0.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "jest": "^24.7.1",
    "jest-extended": "^0.11.1",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.7.2",
    "react-redux": "^7.0.2",
    "redux": "^4.0.1",
    "styled-components": "^4.2.0",
    "webpack": "^4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  }
}
